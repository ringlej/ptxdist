		prompt "none   "
		help
		  Don't build the driver

# only as plugin

	config QT4_GFX_AHI_PLUGIN
		bool
		prompt "plugin "
		depends on BROKEN
		help
		  Load the driver at runtime
endchoice

choice
	prompt "DirectFB            "
