config GCCLIBS_GCJ
	bool "libgcj"
	select GCCLIBS_CXX
	select GCCLIBS_GCC_S
	select LIBC_DL
	select LIBC_M
	select LIBC_PTHREAD
	select LIBC_RT
	help
	  Installs the GNU Java Library
	  libgcj

