	depends on GLIBC

config GLIBC_CRYPT
	bool
	prompt "Install libcrypt on the target"
	depends on GLIBC

config GLIBC_UTIL
	bool
	prompt "Install libutil on the target"
	depends on GLIBC

config GLIBC_LIBM
	bool
	prompt "Install libm on the target"
