		prompt "xlib"

	config MESALIB_DRIVER_DRI
		bool
		prompt "dri"

	config MESALIB_DRIVER_OSMESA
		depends on !XORG_SERVER_EXT_GLX
		bool
		prompt "osmesa"

endchoice

