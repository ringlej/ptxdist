menuconfig NTP
	bool
	# FIXME:
	# gcc     -o ntpdc-layout  ntpdc-layout.o  -lelf 
	# /usr/bin/ld: cannot find -lelf
	depends on BROKEN
	prompt "NTP                 "
	select OPENSSL if NTP_CRYPTO
	help
	  Build the standard NTP Daemon Process
	  This conflicts with BSD openntpd.

